generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Status {
  TODO
  PROCESS
  DONE
}

model Todo {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String @db.VarChar(100)
  status  Status @default(TODO)
  deadline DateTime?
}
